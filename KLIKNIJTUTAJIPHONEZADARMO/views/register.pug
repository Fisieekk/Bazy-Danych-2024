doctype html 
html 
    head 
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css')
        link(rel='stylesheet', href='/styles.css')
        title Login 
    body
        .container
            .row
                .col-md-6.offset-md-3
                h1.text-center
                    | Logowanie
                form(action='/register' method='post')
                    .mb-3
                    label.form-label(for='name') Imie
                    input#name.form-control(type='name' name='name' required='')

                    .mb-3
                    label.form-label(for='surname') Nazwisko
                    input#surname.form-control(type='surname' name='surname' required='')

                    .mb-3
                    label.form-label(for='email') Email
                    input#email.form-control(type='email' name='email' required='')
                    
                    .mb-3
                    label.form-label(for='password') Has&lstrok;o
                    input#password.form-control(type='password' name='password' required='')
                    
                    .mb-3
                    label.form-label(for='phone') Phone
                    input#phone.form-control(type='phone' name='phone' required='')
                    
                    .mb-3
                    label.form-label(for='address') Address
                    input#address.form-control(type='address' name='address' required='')

                    button.btn.btn-primary(type='submit') Zarejestruj


script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')